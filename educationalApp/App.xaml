<Application x:Class="educationalApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:educationalApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="symbol" TargetType="Image">
            <Setter Property="Height" Value="140"/>
            <Setter Property="Width" Value="115"/>
            <Setter Property="Margin" Value="10"/>
            
        </Style>
        <Style x:Key="digit" TargetType="Image">
            <Setter Property="Height" Value="250"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="15,0,0,40"/>
        </Style>
        <Style x:Key="ButtonHead" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
        </Style>
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="19"/>
        </Style>
    </Application.Resources>
</Application>
